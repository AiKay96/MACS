<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>User Login System</display-name>
  <servlet>
    <servlet-name>LogInServlet</servlet-name>
    <servlet-class>UserLogin.LogInServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewAccountServlet</servlet-name>
    <servlet-class>UserLogin.NewAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogInServlet</servlet-name>
    <url-pattern>/LogIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewAccountServlet</servlet-name>
    <url-pattern>/createAccount</url-pattern>
  </servlet-mapping>
</web-app>
